<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TemplateSpartaneApp.Views.Home.HomePrincipal">
    <MasterDetailPage.Master>
        <ContentPage
            Title="Menú"
            BackgroundColor="#F6F6F8">
            <StackLayout Margin="20,50" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="OrangeRed">
                <Image Source="logo.png" HorizontalOptions="CenterAndExpand" WidthRequest="130" />
                <BoxView HorizontalOptions="Fill" HeightRequest="1" BackgroundColor="Teal"/>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>